# 日本株ウォッチドッグ 環境設定ファイル
# このファイルを .env にコピーして使用してください

# API制限設定
# Yahoo Finance API
YAHOO_API_HOURLY_LIMIT=100    # 1時間あたりのリクエスト数
YAHOO_API_MINUTE_LIMIT=10      # 1分あたりのリクエスト数
YAHOO_API_TIMEOUT=30           # タイムアウト秒数

# J-Quants API（将来実装予定）
JQUANTS_API_HOURLY_LIMIT=500  # 1時間あたりのリクエスト数
JQUANTS_API_MINUTE_LIMIT=30    # 1分あたりのリクエスト数
JQUANTS_API_TIMEOUT=30         # タイムアウト秒数

# キャッシュ設定
ENABLE_CACHE=true              # キャッシュ有効化
CACHE_TTL=900                  # キャッシュ有効期限（秒）
MAX_CACHE_SIZE=100             # 最大キャッシュサイズ

# データベース設定
DATABASE_PATH=data/stock_portfolio.db  # データベースファイルパス
DATABASE_ECHO=false                    # SQL出力（デバッグ用）

# アプリケーション設定
DEBUG_MODE=false               # デバッグモード
LOG_LEVEL=INFO                 # ログレベル（DEBUG, INFO, WARNING, ERROR）
APP_THEME=default              # アプリテーマ